<?xml version="1.0" encoding="utf-8"?>
<!-- xml file created to create rectangular border around textView
  Link: https://stackoverflow.com/questions/3496269/how-to-put-a-border-around-an-android-textview -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- View background color -->
    <solid
        android:color="@color/md_theme_light_surfaceVariant" >
    </solid>

    <stroke
        android:width="16dp"
        android:color="@color/md_theme_light_secondaryContainer">
    </stroke>
    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="@dimen/buttonRadius">
    </corners>
</shape>