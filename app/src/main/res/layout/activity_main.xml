<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_inversePrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <TextView
        android:id="@+id/textViewFirstInputNum"
        android:layout_width="@dimen/inputBoxWidth"
        android:layout_height="102dp"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOperation"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewSecondInputNum"
        app:layout_constraintStart_toEndOf="@+id/textViewFirstInputNum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSecondInputNum"
        android:layout_width="@dimen/inputBoxWidth"
        android:layout_height="102dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="@dimen/edgeMargin"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="40dp"
        android:onClick="buttonSelected"
        android:text="@string/back"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstInputNum" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="40dp"
        android:onClick="buttonSelected"
        android:text="รท"
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/buttonRightParentheses"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondInputNum" />

    <Button
        android:id="@+id/buttonRightParentheses"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="40dp"
        android:onClick="buttonSelected"
        android:text=")"
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/buttonLeftParentheses"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondInputNum" />

    <Button
        android:id="@+id/buttonLeftParentheses"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="40dp"
        android:onClick="buttonSelected"
        android:text="("
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/buttonBack"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstInputNum" />

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeftParentheses" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/buttonRightParentheses" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="+"
        android:textAlignment="center"
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="-"
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="ร"
        android:textSize="@dimen/symbolSize"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button0"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/buttonNegative"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/buttonNegative"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/edgeMargin"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="(-)"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="@dimen/spaceBetweenButton"
        android:layout_marginTop="@dimen/spaceUpBetweenButton"
        android:onClick="buttonSelected"
        android:text="@string/enter"
        android:textAlignment="center"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDecimal"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>